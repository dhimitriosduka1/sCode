{
  "name": "slurm-cluster-manager",
  "displayName": "SLURM Cluster Manager",
  "description": "Manage and monitor SLURM cluster jobs directly from VSCode",
  "version": "0.2.16",
  "publisher": "dhimitriosduka",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:slurmJobs",
    "onView:slurmHistory"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "slurm-explorer",
          "title": "SLURM Cluster",
          "icon": "$(server)"
        }
      ]
    },
    "views": {
      "slurm-explorer": [
        {
          "id": "slurmJobs",
          "name": "Active Jobs",
          "icon": "$(tasklist)",
          "contextualTitle": "SLURM Active Jobs"
        },
        {
          "id": "slurmHistory",
          "name": "Job History",
          "icon": "$(history)",
          "contextualTitle": "SLURM Job History"
        }
      ]
    },
    "commands": [
      {
        "command": "slurmJobs.refresh",
        "title": "Refresh Jobs",
        "icon": "$(refresh)"
      },
      {
        "command": "slurmHistory.refresh",
        "title": "Refresh History",
        "icon": "$(refresh)"
      },
      {
        "command": "slurmJobs.search",
        "title": "Search Jobs",
        "icon": "$(search)"
      },
      {
        "command": "slurmJobs.clearSearch",
        "title": "Clear Search",
        "icon": "$(clear-all)"
      },
      {
        "command": "slurmJobs.openFile",
        "title": "Open File"
      },
      {
        "command": "slurmJobs.openStdout",
        "title": "Open Stdout",
        "icon": "$(output)"
      },
      {
        "command": "slurmJobs.openStderr",
        "title": "Open Stderr",
        "icon": "$(warning)"
      },
      {
        "command": "slurmJobs.toggleAutoRefresh",
        "title": "Toggle Auto Refresh",
        "icon": "$(sync)"
      },
      {
        "command": "slurmJobs.setAutoRefreshInterval",
        "title": "Set Auto Refresh Interval"
      },
      {
        "command": "slurmJobs.cancelJob",
        "title": "Cancel Job",
        "icon": "$(trash)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "slurmJobs.refresh",
          "when": "view == slurmJobs",
          "group": "navigation@1"
        },
        {
          "command": "slurmJobs.search",
          "when": "view == slurmJobs",
          "group": "navigation@2"
        },
        {
          "command": "slurmJobs.clearSearch",
          "when": "view == slurmJobs",
          "group": "navigation@3"
        },
        {
          "command": "slurmJobs.toggleAutoRefresh",
          "when": "view == slurmJobs",
          "group": "navigation@4"
        },
        {
          "command": "slurmHistory.refresh",
          "when": "view == slurmHistory",
          "group": "navigation@1"
        }
      ],
      "view/item/context": [
        {
          "command": "slurmJobs.openStdout",
          "when": "view == slurmJobs && viewItem == slurmJob",
          "group": "inline@1"
        },
        {
          "command": "slurmJobs.openStderr",
          "when": "view == slurmJobs && viewItem == slurmJob",
          "group": "inline@2"
        },
        {
          "command": "slurmJobs.openStdout",
          "when": "view == slurmJobs && viewItem == slurmJob",
          "group": "output@1"
        },
        {
          "command": "slurmJobs.openStderr",
          "when": "view == slurmJobs && viewItem == slurmJob",
          "group": "output@2"
        },
        {
          "command": "slurmJobs.cancelJob",
          "when": "view == slurmJobs && viewItem == slurmJob",
          "group": "inline@3"
        },
        {
          "command": "slurmJobs.cancelJob",
          "when": "view == slurmJobs && viewItem == slurmJob",
          "group": "actions@1"
        }
      ]
    },
    "configuration": {
      "title": "SLURM Cluster Manager",
      "properties": {
        "slurmClusterManager.autoRefreshInterval": {
          "type": "number",
          "default": 30,
          "minimum": 5,
          "maximum": 3600,
          "description": "Auto refresh interval in seconds (5-3600)"
        },
        "slurmClusterManager.autoRefreshEnabled": {
          "type": "boolean",
          "default": false,
          "description": "Enable auto refresh of job lists"
        },
        "slurmClusterManager.confirmCancelJob": {
          "type": "boolean",
          "default": true,
          "description": "Show confirmation dialog before cancelling a job"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "typescript": "^5.3.0"
  }
}